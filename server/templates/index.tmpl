    <!-- tasks -->
    <script id="tasks-tpl" type="text/html">
      <!-- /.row -->
      <div class="row">
          <div class="col-lg-12">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      <i class="fa fa-bar-chart-o fa-fw"></i> List of tasks
                  </div>
                  <!-- /.panel-heading -->
                  <div class="panel-body">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Scheduled</th>
                          <th>Asset Name</th>
                          <th>Command</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody id="list-of-tasks">
                      </tbody>
                    </table>
                  </div>
                  <!-- /.panel-body -->
              </div>
              <!-- /.panel -->
          </div>
      </div>
      <!-- /.row -->
    </script>

    <script id="tasks-list-tpl" type="text/html">
      <% $.each(d, function(idx, item) { %>
      <% console.log(item) %>
        <% if (item.task.status === 0) { %>
          <tr>
        <% } else if (item.task.status === 1) { %>
          <tr class="warning">
        <% } else { %>
          <tr class="danger">
        <% } %>
            <td><%= moment(item.task.when).format('DD-MM-YYYY h:mm:ss') %></td>
            <td><%= item.hostname %> (<%= item.ulid %>)</td>
            <td>
              <% if (item.task.command === 4) { %>
                Scan File
              <% } else if (item.task.command === 5) { %>
                Scan Dir
              <% } else if (item.task.command === 6) { %>
                Scan PID
              <% } %>
            </td>
            <% if (item.task.status === 0) { %>
              <td>Pending</td>
            <% } else { %>
              <td>In Progress</td>
            <% } %>
            <td>
              <button type="button" class="btn btn-info" aria-label="Left Align">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
            <button type="button" class="btn btn-danger" aria-label="Left Align">
                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>
            </td>
          </tr>
      <% }) %>
    </script>

    <!-- reports -->
    <script id="reports-tpl" type="text/html">
      <!-- /.row -->
      <div class="row">
          <div class="col-lg-12">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      <i class="fa fa-bar-chart-o fa-fw"></i> List of reports
                  </div>
                  <!-- /.panel-heading -->
                  <div class="panel-body">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Scheduled</th>
                          <th>Asset Name</th>
                          <th>Command</th>
                          <th>Params</th>
                          <th>Rules Set</th>
                          <th>Matched with</th>
                        </tr>
                      </thead>
                      <tbody id="list-of-reports">
                      </tbody>
                    </table>
                  </div>
                  <!-- /.panel-body -->
              </div>
              <!-- /.panel -->
          </div>
      </div>
      <!-- /.row -->
    </script>

    <script id="reports-list-tpl" type="text/html">
      <% $.each(d, function(idx, item) { %>
        <% $.each(item.reports, function(idx, report) { %>
          <% $.each(report.result, function(idx, result) { %>
            <tr>
              <td><%= moment(report.task.when).format('DD-MM-YYYY h:mm:ss') %></td>
              <td><%= item.hostname %></td>
              <td>
                <% if (report.task.command === 4) { %>
                  Scan File
                <% } else if (report.task.command === 5) { %>
                  Scan Dir
                <% } else if (report.task.command === 6) { %>
                  Scan PID
                <% } %>
              </td>
              <td><%= report.task.params %></td>
              <td><%= report.task.rules %></td>
              <td><%= result.rule_name %></td>
            </tr>
          <% }) %>
        <% }) %>
      <% }) %>
    </script>

    <!-- ENTRYPOINT -->
    <script type="text/javascript">

      (function($) {
        $("#assets").click(loadListOfAssets);
        $("#rules").click(loadRules);
        $("#tasks").click(loadTasks);
        $("#reports").click(loadReports);
        renderDashboard();
      }(jQuery));

    </script>

