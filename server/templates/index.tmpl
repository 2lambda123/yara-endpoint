                  </div>
                  <!-- /.panel-body -->
              </div>
              <!-- /.panel -->
          </div>
      </div>
      <!-- /.row -->
    </script>

    <script id="rules-list-tpl" type="text/html">
      <% $.each(d, function(idx, item){ %>
        <tr>
          <td><%= moment(item.updated_at).format('DD-MM-YYYY h:mm:ss') %></td>
          <td><%= item.name %></td>
          <td>
            <% $.each(item.tags, function(idxx, tag) { %>
              <span class="label label-primary"><%= tag %></span>
            <% }) %>
